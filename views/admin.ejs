    <script src="/admin/js/main.js"></script>
    <script src="/admin/js/delete-post.js"></script>
    <script src="/admin/js/update-post.js"></script>
    <script src="/admin/js/callback-requests.js"></script>
    <script src="/admin/js/callback-request-delete.js"></script>
    <script src="/admin/js/emails.js"></script>
    <script src="/admin/js/emails-delete.js"></script>
</body>
</html>