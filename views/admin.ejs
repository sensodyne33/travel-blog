    </header>
    
    <!--section where we add/delete posts-->
    <main>
      <div class="container page-wrapper">
        <h1>Admin Page</h1>
        <hr>
        <div class="row">
          <!--left hand column: small block-->
          <div class="col-3">
            <div class="card">
              <div class="card-block">
                <!--use boostrap to create vertical switchers-->
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                  <a class="nav-link active" id="v-pills-home-articles" data-toggle="pill" href="#v-pills-articles" role="tab" aria-controls="v-pills-articles" aria-selected="true">Articles</a>
                  <a class="nav-link" id="v-pills-callback-tab" data-toggle="pill" href="#v-pills-callback" role="tab" aria-controls="v-pills-callback" aria-selected="false">Callbacks</a>
                  <a class="nav-link" id="v-pills-mail-tab" data-toggle="pill" href="#v-pills-mail" role="tab" aria-controls="v-pills-mail" aria-selected="false">Mail</a>
                </div>
            </div>
          </div>
          </div>
          <!--right hand column: large block-->
          <div class="col-9">
            <div class="card">
              <div class="card-block">
                <!--use boostrap to show content for the vertical switchers-->
                <!--this is the article content section-->
                <div class="tab-content" id="v-pills-tabContent">
                  <div class="tab-pane fade show active" id="v-pills-articles" role="tabpanel" aria-labelledby="v-pills-articles-tab">
                    <!--this shows the add post button-->
                    <button class="btn btn-primary create-post-btn">Add post</button>

                    
                    <div class="articles">
                      <!--this shows the posts from the database-->
                    </div>
                  </div>

                  <div class="tab-pane fade" id="v-pills-callback" role="tabpanel" aria-labelledby="v-pills-callback-tab">phone content</div>
                  <div class="tab-pane fade" id="v-pills-mail" role="tabpanel" aria-labelledby="v-pills-mail-tab">mail stuff</div>
                  <div class="tab-pane fade" id="v-pills-create-post" role="tabpanel" aria-labelledby="v-pills-create-post-tab">
                    <h2>Create Post</h2>
                    <!--create the form for creating  a new post using boostrap-->
                    <form class="create-post-form">
                      <div class="form-group">
                        <label for="create-title">Title</label>
                        <input type="text" class="form-control" id="create-title" placeholder="Title">
                      </div>
                      <div class="form-group">
                        <label for="create-country">Country</label>
                        <input type="text" class="form-control" id="create-country" placeholder="Country">
                      </div>
                      <div class="form-group">
                        <label for="create-image-url">Image</label>
                        <input type="text" class="form-control" id="create-image-url" placeholder="Image">
                      </div>
                     <p>or</p>
                     <input type="file" class="form-control-file form-control" id="create-image-file">
                     <div class="form-group">
                      <label for="create-text">Text</label>
                      <textarea class="form-control" id="create-text" id="create-text" rows="5"></textarea>
                    </div>
                    <button class="btn btn-primary">Create Post</button>
                    </form>
                  </div>

                  <!--update form-->
                  <div class="tab-pane fade" id="v-pills-update-post" role="tabpanel" aria-labelledby="v-pills-update-post-tab">
                    <h2>Update Post</h2>
                    <!--create the form for creating  a new post using boostrap-->
                    <form class="update-post-form">
                      <div class="form-group">
                        <label for="update-title">Title</label>
                        <input type="text" class="form-control" id="update-title" placeholder="Title">
                      </div>
                    
        
                     <div class="form-group">
                      <label for="update-text">Text</label>
                      <textarea class="form-control" id="update-text" id="create-text" rows="5"></textarea>
                    </div>
                    <button class="btn btn-primary">Update Post</button>
                    </form>
                  </div>


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	 
